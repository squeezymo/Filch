<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:background="@drawable/bs_bg_primary"
    tools:theme="@style/Theme.Filch">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="28dp"
        android:layout_marginBottom="8dp"
        android:text="@string/settings.caption.about"
        android:textSize="32sp"
        android:textStyle="bold" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/about_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                android:textSize="16sp"
                tools:text="@string/settings.text.about" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/share_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="32dp"
                android:letterSpacing="0"
                android:minHeight="72dp"
                android:text="@string/settings.action.share"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="@color/white_a20"
                app:cornerRadius="30dp"
                app:strokeColor="@color/white_a40"
                app:strokeWidth="1dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="12dp"
                android:text="@string/settings.caption.how_it_works"
                android:textSize="16sp"
                android:textStyle="bold" />

            <me.squeezymo.settings.impl.ui.widget.NumericStepWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                app:stepNumber="1"
                app:stepText="@string/settings.text.how_it_works_1" />

            <me.squeezymo.settings.impl.ui.widget.NumericStepWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                app:stepNumber="2"
                app:stepText="@string/settings.text.how_it_works_2" />

            <me.squeezymo.settings.impl.ui.widget.NumericStepWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="8dp"
                app:stepNumber="3"
                app:stepText="@string/settings.text.how_it_works_3" />

            <me.squeezymo.settings.impl.ui.widget.NumericStepWidget
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="24dp"
                app:stepNumber="4"
                app:stepText="@string/settings.text.how_it_works_4" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_a20" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/go_to_client_support_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:text="@string/settings.action.go_to_client_support"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_a20" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/go_to_privacy_policy_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/selectableItemBackground"
                android:paddingHorizontal="24dp"
                android:paddingVertical="16dp"
                android:text="@string/settings.action.go_to_privacy_policy"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/white_a20" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp"
                android:letterSpacing="0"
                android:minHeight="72dp"
                android:text="@string/settings.action.logout"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:backgroundTint="@color/white_a20"
                app:cornerRadius="30dp"
                app:strokeColor="@color/white_a40"
                app:strokeWidth="1dp" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
